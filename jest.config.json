{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "rootDir": ".",
  "testRegex": ".*(spec|test)\\.tsx?$",
  "displayName": "Unit & Integration Tests",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "<rootDir>/.next",
    "<rootDir>/public",
    "<rootDir>/node_modules"
  ]
}
